---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

const { entry } = Astro.props;

const images = import.meta.glob<{ default: ImageMetadata }>(
    "../assets/images/members/*.{png,jpg,jpeg,webp}",
);

const imagePath = `../assets/images/members/${entry.data.image}`;
const image = await images[imagePath]();

const { Content } = await entry.render();
---

<div class="glass-card rounded-3xl overflow-hidden p-6">
    <div class="flex items-center space-x-4 mb-6">
        <Image
            src={image.default}
            alt={entry.data.name}
            class="w-16 h-16 rounded-2xl object-cover border-2 border-gray-800"
        />
        <div>
            <h3 class="text-xl font-bold">{entry.data.name}</h3>
            <p class="neon-text text-sm mono">{entry.data.role}</p>
        </div>
    </div>

    <div class="text-slate-400 text-sm mb-6 leading-relaxed">
        <Content />
    </div>

    <!-- resto de tu contenido -->
</div>
